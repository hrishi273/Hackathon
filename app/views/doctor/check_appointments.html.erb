<center>
	<h2>Check Your Appointments</h2>
	<hr>
	<br>
</center>

<table class="table table-bordered">
	<tr>
		<th class="col-md-1">No</th>
		<th class="col-md-7">Patient Name</th>
		<th class="col-md-4">Date</th>
	</tr>
	<% i=1 %>
	<% @appointments.each do |app| %>
		<tr>
			<td><%= i %></td>
			<td><% @l=Patient.find(app.patient_id) %><%= @l.name %></td>
			<td><%= app.date %></td>
		</tr>
		<% i+=1 %>
	<% end %>
</table>

<center><%= paginate @appointments %>

<br>
<hr>
<%= link_to "Back",labs_path,class:"btn btn-default button" %>
</center>