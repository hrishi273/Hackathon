<%= simple_form_for(@patient) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :address,as: :text %>
    <div class="row">
      <div class="col-md-6"><%= f.input :contact %></div> 
      <div class="col-md-6"><%= f.input :email %></div> 
    </div>
    <div class="row">
      <div class="col-md-6"><%= f.input :date_of_birth %></div>
      <div class="col-md-6"><%= f.input :blood_group %></div>
    </div>
    <div class="row">
      <div class="col-md-6"><%= f.input :height %></div>
      <div class="col-md-6"><%= f.input :weight %></div>
    </div>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
